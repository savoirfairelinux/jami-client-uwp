                                    HorizontalAlignment="Stretch"
                                    TextWrapping="NoWrap"
                                    VerticalAlignment="Center"
                                    Margin="8,4,8,4"
                                    Background="White"
                                    AcceptsReturn="True"
                                    TextChanged="_messageTextBox__TextChanged"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
